<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="545.0" prefWidth="693.0" stylesheets="@css/button.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AjouterCategorieController">
   <children>
      <TextField fx:id="tfNomCategorie" layoutX="41.0" layoutY="79.0" prefHeight="25.0" prefWidth="162.0" promptText="Nom catégorie" />
      <Label layoutX="297.0" layoutY="14.0" text="Catégorie">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Button fx:id="ajouterCategorie" layoutX="325.0" layoutY="79.0" mnemonicParsing="false" onAction="#AjouterCategorie" prefHeight="23.0" prefWidth="91.0" text="Ajouter">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
      <ImageView fx:id="tfImage" fitHeight="172.0" fitWidth="216.0" layoutX="450.0" layoutY="39.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="btnImageC" layoutX="212.0" layoutY="79.0" mnemonicParsing="false" onAction="#btn_image_action" text="inserer Image">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
      <TableView fx:id="tabCategorie" layoutX="31.0" layoutY="262.0" onMouseClicked="#SetValue" prefHeight="276.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="nomCategorieTab" prefWidth="187.0" text="nom Categorie" />
          <TableColumn fx:id="imageCategorieTab" prefWidth="212.0" text="Image Categorie" />
        </columns>
      </TableView>
      <Button fx:id="modifierCategorie" layoutX="325.0" layoutY="113.0" mnemonicParsing="false" onAction="#ModifierCategorie" prefHeight="23.0" prefWidth="91.0" text="Modifier">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
      <Button fx:id="supprimerCategorie" layoutX="185.0" layoutY="113.0" mnemonicParsing="false" onAction="#SupprimerCategorie" prefHeight="25.0" prefWidth="132.0" text="Supprimer">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
      <Hyperlink layoutX="14.0" layoutY="3.0" onAction="#backCategorie" prefHeight="23.0" prefWidth="51.0" text="Retour" />
      <TextField fx:id="RechercherCategorie" layoutX="38.0" layoutY="223.0" onKeyPressed="#searchCategorie" prefHeight="25.0" prefWidth="138.0" promptText="Rechercher" />
      <ComboBox fx:id="sortCategorieBox" layoutX="185.0" layoutY="223.0" onAction="#sortCategorie" prefHeight="25.0" prefWidth="91.0" />
      <Button fx:id="pdfCategorie" layoutX="282.0" layoutY="223.0" mnemonicParsing="false" onAction="#generatePdfCategorie" prefHeight="25.0" prefWidth="61.0" text=" PDF">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
      <ImageView fx:id="qrcode" fitHeight="199.0" fitWidth="184.0" layoutX="466.0" layoutY="301.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="qrcodebtn" layoutX="41.0" layoutY="113.0" mnemonicParsing="false" onAction="#generateQrCode" prefHeight="25.0" prefWidth="132.0" text=" Qrcode">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
      <Button fx:id="excelCategorie" layoutX="353.0" layoutY="223.0" mnemonicParsing="false" onAction="#generateExcelCategorie" prefHeight="25.0" prefWidth="73.0" text="Excel">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
   </children>
</AnchorPane>
